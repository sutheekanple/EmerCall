<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayoutMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="masterple.snru.sc.th.emercall.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <!--Toolbar-->
      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbarMain"
          android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
          android:background="@color/colorPrimary"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--wallpaper-->
              <ImageView
                  android:scaleType="centerCrop"
                  android:src="@drawable/bg1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" />

            <!--Fragment-->
            <FrameLayout
                android:id="@+id/contentMainFeagment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>





  </LinearLayout>

  <!--Drawer Menu-->
 <LinearLayout

     android:layout_gravity="start"
     android:background="#ffffff"
     android:orientation="vertical"
     android:layout_width="320dp"
     android:layout_height="match_parent">

   <TextView
       android:textStyle="bold"
       android:textSize="24sp"
       android:text="Drawer Menu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

     <!--police-->
     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <!--Icon-->
         <ImageView
             android:src="@drawable/station1"
             android:layout_width="48dp"
             android:layout_height="48dp" />

         <!--Title-->
         <TextView

             android:id="@+id/txtPolice"
             android:clickable="true"
             android:textSize="30dp"
             android:text="police"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <!--Police-->
     </LinearLayout>


     <!--Hospital-->
     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <!--Icon-->
         <ImageView
             android:src="@drawable/station2"
             android:layout_width="48dp"
             android:layout_height="48dp" />

         <!--Title-->
         <TextView
             android:id="@+id/textHospital"
             android:clickable="true"
             android:textSize="30dp"
             android:text="Hospital"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </LinearLayout>


     <!--Insurance-->
     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <!--Icon-->
         <ImageView
             android:src="@drawable/station3"
             android:layout_width="48dp"
             android:layout_height="48dp" />

         <!--Title-->
         <TextView
             android:id="@+id/textInsurance"
             android:textSize="30dp"
             android:text="Insurance"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <!--Police-->
     </LinearLayout>


     <!--Exit-->
     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <!--Icon-->
         <ImageView
             android:src="@drawable/station4"
             android:layout_width="48dp"
             android:layout_height="48dp" />

         <!--Title-->
         <TextView
             android:id="@+id/textExit"
             android:clickable="true"
             android:textSize="30dp"
             android:text="Exit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <!--Police-->
     </LinearLayout>


 </LinearLayout>



</android.support.v4.widget.DrawerLayout>
